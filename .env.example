# Environment Configuration

# Application
APP_NAME=LLM Router
APP_ENV=development
APP_VERSION=0.1.0
DEBUG=True
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database
DATABASE_URL=postgresql+asyncpg://llm_router:llm_router_password@localhost:5432/llm_router
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50

# API Keys
SECRET_KEY=your-secret-key-change-this-in-production
ADMIN_API_KEY=your-admin-api-key-change-this-in-production
API_KEY_SALT=your-salt-change-this-in-production

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_ORGANIZATION=
OPENAI_TIMEOUT=60

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_TIMEOUT=60

# Routing Configuration
ROUTING_SWITCH_ENABLED=True
ROUTING_SWITCH_DELAY_SECONDS=10
ROUTING_SWITCH_COOLDOWN_SECONDS=300
DEFAULT_MODEL=gpt-3.5-turbo

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Cost Tracking
COST_TRACKING_ENABLED=True
COST_BUDGET_WARNING_THRESHOLD=80
COST_BUDGET_CRITICAL_THRESHOLD=95

# Monitoring
METRICS_ENABLED=True
HEALTH_CHECK_INTERVAL=30

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://127.0.0.1:5173","http://127.0.0.1:3000"]
